<!DOCTYPE html>
<html>
  <head>
    <title>Tastebackapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
  <div class="navbar-header">
  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("rainbow-slogan.png", class: "logo navbar-brand"), root_path %>
  </div>
    <div class="navbar-collapse nav-links" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact", contacts_path %></li>
        <%if user_signed_in? %>
        <li><%= link_to 'Profile', user_path(current_user) %></li>
        <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to 'Sign in', new_user_session_path %></li>
        <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
    </div>
  </nav>
  <% if !flash.empty? %>
  <div id="flash">
  <% flash.each do |k, v| %>
    <div class="flash-<%= k %>">
      <span class="flash-text"><%= v %></span>
    </div>
  <% end %>
  </div>
<% end %>
    <%= yield %>
  </body>
</html>
