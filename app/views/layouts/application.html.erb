      <%= link_to image_tag("rainbow-slogan.png", class: "logo navbar-brand"), root_path %>
  </div>
    <div class="navbar-collapse nav-links collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
