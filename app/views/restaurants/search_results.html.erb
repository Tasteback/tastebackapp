      <div class="col-md-6 restaurant-item-name">
      <span><%= link_to r.name, r %></span> <br>
      <div class="review-rating">
    <% r.average_rating.times do |i| %>
      <span class="glyphicon glyphicon-star"></span>
    <% end %>
    </div>
      <%= r.price_range%> â€¢ <%= r.cuisine %>
      </div>
      <div class="col-md-6 restaurant-item-area">
