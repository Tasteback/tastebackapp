    <div class="col-md-1"></div>
    <div class="restaurant-item col-md-10">
      <div class="col-md-6 restaurant-item-name">
      <span><%= link_to r.name, r %></span> <br>
      <%= r.price_range%> â€¢ <%= r.cuisine %>
      </div>
      <div class="col-md-6 restaurant-item-area">
      <% if @geo %>
        <%= r.distance.round(2) %> miles away <br>
      <% end %>
      <%= r.area %><br>
      <%= r.address %><br>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
<% end %>

</div>