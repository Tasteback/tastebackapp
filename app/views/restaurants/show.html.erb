<h1><%= @restaurant.name %></h1>

<ul>
<li>Cuisine: <%= @restaurant.cuisine %></li>
<li>Address: <%= @restaurant.address %></li>
<li>Area: <%= @restaurant.area %></li>
<li>Price Range: <%= @restaurant.price_range %></li>
<li>Hours: <%= @restaurant.hours %></li>
<li>Phone Number: <%= @restaurant.phone_number%></li>
<li><%= link_to "Website", "http://#{@restaurant.url}", target: "_blank" %></li>
</ul>

<% @dishes.each do |d| %>
  <h2><%= d.name %></h2>
  <p>Accomodates the following food restrictions:</p>
  <% d.dish_allergies.each do |da| %>
    <%= da.allergy.name %>
    <% if da.modification %>
    <p>Modification needed: <%= da.modification.description %></p>
    <% end %>
  <% end %>
<% end %>